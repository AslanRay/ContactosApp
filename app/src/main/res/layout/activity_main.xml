<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light"
    ></android.support.v7.widget.Toolbar>
    <ViewSwitcher android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/cambiarVistas">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/lvContactos"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"/>
        <GridView
                android:layout_width="match_parent"
                android:layout_height="931dp" android:id="@+id/gridContactos"
        android:numColumns="2"/>
    </ViewSwitcher>


</android.support.constraint.ConstraintLayout>