<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NuevoContacto">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light"
    ></android.support.v7.widget.Toolbar>
    <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp" app:srcCompat="@drawable/foto_03" android:id="@+id/ivFoto"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/etNombre"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivFoto" android:layout_marginStart="60dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Nombre" android:inputType="textPersonName|text" android:singleLine="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/etOcupacion"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etNombre" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Ocupacion" android:inputType="text" android:singleLine="true"/>
    <TextView
            android:text="@string/txt_tv_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/etOcupacion"/>
    <TextView
            android:text="@string/txt_tv_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="36dp"
            app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginEnd="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/etOcupacion"
            app:layout_constraintHorizontal_bias="0.471"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/etOcupacion"
            android:text="@string/txt_tv_telefono"/>
    <EditText
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:id="@+id/etEdad"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginStart="72dp"
            app:layout_constraintStart_toStartOf="parent" android:inputType="number" android:singleLine="true"/>
    <EditText
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/etPeso"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/etEdad"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/etTelefono" app:layout_constraintHorizontal_bias="0.634"
            android:inputType="numberDecimal" android:singleLine="true"/>
    <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:id="@+id/etTelefono"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent" android:inputType="phone"
            android:singleLine="true"/>
    <TextView
            android:text="@string/txt_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/etEdad" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/etTelefono" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:text="@string/txt_tv_direccion"/>
    <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine="true" android:inputType="textEmailAddress"/>
    <EditText
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:id="@+id/etDireccion" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine="true" android:inputType="textPostalAddress"/>
    <EditText
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|text"
            android:ems="10"
            android:id="@+id/etApellido" android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivFoto" app:layout_constraintStart_toEndOf="@+id/etNombre"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintHorizontal_bias="0.19" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/etOcupacion" android:hint="Apellido"
            app:layout_constraintVertical_bias="0.0" android:singleLine="true"/>
</android.support.constraint.ConstraintLayout>